# Top-most EditorConfig file
root = true

# Universal settings:
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript and JSX files (React)
[*.{js,jsx}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# CSS files
[*.css]
indent_style = space
indent_size = 2

# Node.js server files
[*.mjs]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false